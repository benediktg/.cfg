{
    "auto-close-tag.fullMode": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.autoIndent": true,
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "'Fira Code', Hack, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 99],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.wrappingIndent": "deepIndent",
    "emmet.includeLanguages": {
        "django-html": "html",
        "javascript": "javascriptreact",
        "vue-html": "html"
    },
    "explorer.openEditors.visible": 0,
    "extensions.autoUpdate": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "files.associations": {
        "**/*_vars/**/*.yml": "ansible",
        "**/*ansible*/**/*.yml": "ansible",
        "**/defaults/**/*": "ansible",
        "**/handler/*.yml": "ansible",
        "**/inventory/*/*": "ansible",
        "**/playbooks/**/*.yml": "ansible",
        "**/roles/**/*.yml": "ansible",
        "**/tasks/**/*.yml": "ansible",
        "**/templates/**/*.html": "django-html",
        "**/vars/**/*.yml": "ansible",
        "*.html": "html"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/*.min.css": true,
        "**/*.min.js": true,
        "**/*.min.map": true,
        "**/*.mo": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*~": true,
        "**/.DS_Store": true,
        "**/.coverage": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.idea": true,
        "**/.project": true,
        "**/.pydevproject": true,
        "**/.svn": true,
        "**/.tox": true,
        "**/CVS": true,
        "**/__pycache__": true,
        "**/db.sqlite3": true,
        ".vscode/tags": true
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "gitProjectManager.baseProjectsFolders": ["~/Projekte"],
    "gitProjectManager.ignoredFolders": ["node_modules", ".venv"],
    "gitProjectManager.maxDepthRecursion": 3,
    "html.format.endWithNewline": true,
    "html.format.indentHandlebars": true,
    "html.format.maxPreserveNewLines": 3,
    "html.suggest.angular1": false,
    "html.suggest.ionic": false,
    "javascript.implicitProjectConfig.checkJs": true,
    "npm-intellisense.importLinebreak": "\n",
    "prettier.eslintIntegration": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "search.useIgnoreFiles": true,
    "standard.enable": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.menuBarVisibility": "toggle",
    "window.openFilesInNewWindow": "default",
    "window.restoreFullscreen": true,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false
}
