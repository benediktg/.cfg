" notwendig & Basiskonfig {
set nocompatible
set backspace=indent,eol,start
filetype plugin on
set encoding=utf-8
set ffs=unix,dos,mac
" }

" Syntaxhighlighting & Farbe {
syntax enable
set background=dark
colorscheme solarized
set t_Co=16
" }

" Einrückung & Tabulator {
filetype indent on
set autoindent
set smartindent
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
" }

" Bedienung {
set number
set cursorline
set showmode
set showcmd
set ruler
set laststatus=2
set wrap
set title
set scrolloff=1
set sidescrolloff=1
" }

" Suche {
set incsearch
set ignorecase
set smartcase
set hlsearch
" }

