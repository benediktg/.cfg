set nocompatible
set backspace=indent,eol,start
filetype plugin on
set encoding=utf-8
set ffs=unix,dos,mac

" Syntaxhighlighting, Farbe "
syntax enable
set background=dark
colorscheme default
set t_Co=16

" EinrÃ¼ckung, Tabulator "
filetype indent on
set autoindent
set smartindent
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
if v:version >= 800
    set breakindent
endif
set formatoptions=l
set lbr
set showbreak=**\ \

" Bedienung "
set number
set relativenumber
set cursorline
set showmode
set showcmd
set ruler
set laststatus=2
set wrap
set title
set scrolloff=3
set sidescrolloff=5
set sidescroll=1
set updatetime=250
set autoread
set autowrite       " Automatically save before commands like :next and :make
set wildmenu
set wildmode=longest:full,full
set wildignore+=tags,.*.un~,*.pyc
set wildignore+=*.bmp,*.gif,*.ico,*.jpg,*.png,*.ico,*.tif
set wildignore+=*.pdf,*.psd,*.xcf
set wildignore+=node_modules/*,bower_components/*
set lazyredraw
set splitright
set splitbelow

" Suche "
set incsearch
set ignorecase
set smartcase
set nohlsearch

set iskeyword-=_
set nrformats=
set formatoptions+=roq

" Plugins "
call plug#begin('~/.vim/plugged')
runtime plugins.vim
call plug#end()

" Mappings "
let mapleader = 's'

nmap <Leader>m :set so=999<cr>
nmap <Leader><Leader>m :set so=0<cr>

nmap <Leader>ev :e $MYVIMRC<cr>

nnoremap j gj
nnoremap k gk
inoremap ii <Esc>$a
inoremap jk <Esc>
nnoremap + :

augroup autosourcing
    autocmd!
    autocmd BufWritePost .vimrc source %
augroup END

nnoremap <F5> :GundoToggle<CR>

" Markdown "
autocmd BufNewFile,BufReadPost *.md set filetype=markdown
let g:markdown_fenced_languages = ['html', 'python', 'bash=sh', 'json']
let g:markdown_syntax_conceal = 0
let g:markdown_minlines = 100

" Emmet "
let g:user_emmet_install_global = 0
autocmd FileType html,css EmmetInstall

" Ack.vim "
if executable('ag')
    let g:ackprg = 'ag --vimgrep --smart-case'
    cnoreabbrev ag Ack
    cnoreabbrev aG Ack
    cnoreabbrev Ag Ack
    cnoreabbrev AG Ack
endif
